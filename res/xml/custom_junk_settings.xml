<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="junk_settings"
	 >

    <PreferenceCategory
		android:title="C O L O R S   A N D   T H E M E S"
		android:key="quickcolor_icons">
    
    <PreferenceScreen
        android:layout="?android:attr/preferenceLayoutChild"
        android:key="custom_color_settings"
        android:title="Color Items"
        android:summary="Coloring for all custom items"
        android:fragment="com.android.settings.CustomColorSettings" />
 
    <PreferenceScreen
        android:layout="?android:attr/preferenceLayoutChild"
        android:key="custom_qk_color_settings"
        android:title="Quick Color Items"
        android:summary="Coloring for all custom items"
        android:fragment="com.android.settings.CustomQuickColorSettings" />    
    
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"
		android:key="theme_settings"
        android:title="Theme Settings"
        android:summary="Save and apply colors and settings"
        android:fragment="com.android.settings.CustomThemeSettings" />
           
    </PreferenceCategory>       
    
    
    <PreferenceCategory
		android:title="S T A T U S B A R   S E T T I N G S"
		android:key="statusbar_settings">

	<com.android.settings.ColorPickerPreference
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="icon_color"
		android:title="Signal Icons Color"
		android:summary="Color for signal icons"
		android:defaultValue="#ff3fa2c7" 
		alphaSlider="false" /> 	        
    
	<ListPreference
   		android:layout="?android:attr/preferenceLayoutChild"
	    android:key="battery_icon_num"
	    android:title="Battery Icons"
	    android:summary="Different battery icons"
	    android:entryValues="@array/battery_icons_values"
	    android:entries="@array/battery_icons" />
	
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"      
        android:fragment="com.android.settings.CustomBatteryOptions"
        android:key="custom_battery_options"
        android:title="Battery Options" />	    
 
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"      
        android:fragment="com.android.settings.CustomChargeOptions"
        android:key="custom_charge_options"
        android:title="Charging Options" />	    
    
    <PreferenceScreen
        android:layout="?android:attr/preferenceLayoutChild"
		android:key="clock_settings"
        android:title="Clock Settings"
        android:summary="Customize the statusbar clock settings"
        android:fragment="com.android.settings.CustomClockSettings" />    
    
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"		
		android:key="pulldown_settings"
        android:title="Statusbar Pulldown Settings"
        android:summary="Customize the statusbar pulldown"
        android:fragment="com.android.settings.CustomPulldownSettings" />    
    
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"        
		android:key="toggle_settings"
        android:title="Pulldown Toggle Settings"
        android:summary="Customize the pulldown toggles"
        android:fragment="com.android.settings.CustomToggleSettings" />
        
    </PreferenceCategory>  

    
    <PreferenceCategory
		android:title="N A V I G A T I O N   B A R"
		android:key="navigation_settings">
    
    
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"
        android:key="navigation_settings"
        android:title="Navigation Bar Settings"
	    android:summary="Customize the navigation bar"
        android:fragment="com.android.settings.CustomNavBarSettings" />    

    </PreferenceCategory>      

    
    <PreferenceCategory
		android:title="N O T I F I C A T I O N   S E T T I N G S"
		android:key="notificaiton_settings">
    
    
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"
		android:key="quiettime_settings"
        android:title="Notificatin Quiet Time Settings"
        android:summary="Set a quiet time for notifications"
        android:fragment="com.android.settings.CustomQuietSettings" />    
    
    <PreferenceScreen
   		android:layout="?android:attr/preferenceLayoutChild"        
		android:key="led_settings"
        android:title="Notificaiton LED Settings"
        android:summary="Customize the notification led"
        android:fragment="com.android.settings.CustomLedSettings" />        

    </PreferenceCategory>  


</PreferenceScreen>
