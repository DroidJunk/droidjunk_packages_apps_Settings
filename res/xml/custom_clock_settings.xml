<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="Statusbar Settings"
        >


    <PreferenceCategory
		android:title="C L O C K"
		android:key="clock">


	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="show_clock_left"
		android:summaryOn="Left Clock is on"
		android:summaryOff="Left Clock is off"
		android:title="Left Clock" 
		android:defaultValue="false"	/>	
	
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="show_clock_center"
		android:summaryOn="Center Clock is on"
		android:summaryOff="Center Clock is off"
		android:title="Center Clock" 
		android:defaultValue="false"	/>
	
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="show_clock_right"
		android:summaryOn="Right Clock is on"
		android:summaryOff="Right Clock is off"
		android:title="Right Clock" 
		android:defaultValue="true"	/>		
	
 	<CheckBoxPreference 
 		android:layout="?android:attr/preferenceLayoutChild"
		android:key="clock_ampm"
		android:summaryOn="Show am/pm"
		android:summaryOff="Do not show am/pm"
		android:title="Clock am/pm" 
		android:defaultValue="false"	/>
   				
	<ColorPickerPreference
		android:layout="?android:attr/preferenceLayoutChild"
		android:key="clock_color"
		android:title="Clock Color"
		android:summary="Color for statusbar clock"
		android:defaultValue="#ff3792b4" 
		alphaSlider="false" /> 

	<Preference 
		android:layout="?android:attr/preferenceLayoutChild"
		android:key="clock_size"
		android:title="Clock Size"
		android:summary="Size of the clock"
		android:defaultValue="17" />	
		
	</PreferenceCategory>		

</PreferenceScreen>
