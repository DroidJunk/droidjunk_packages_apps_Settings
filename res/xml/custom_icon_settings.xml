<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/statusbar_settings"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
		android:title="ICONS AND COLORS"
		android:key="icons">

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="color_icons"
		android:summaryOn="Coloring of icons is on"
		android:summaryOff="Coloring of icons is off"
		android:title="Color Icons" 
		android:defaultValue="false"	/>

	<com.android.settings.ColorPickerPreference
		android:layout="?android:attr/preferenceLayoutChild" 
		android:dependency="color_icons"
		android:key="icon_color"
		android:title="Statusbar Icons Color"
		android:summary="Color for statusbar icons"
		android:defaultValue="#ff3F9BBF" 
		alphaSlider="false" /> 		


	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:dependency="color_icons"
		android:key="color_icons_apply"
		android:summaryOn="Apply color to clock and navigation bar"
		android:summaryOff="Do not apply color to clock and navigation bar"
		android:title="Theme It!" 
		android:defaultValue="false"	/>
		

    </PreferenceCategory>


</PreferenceScreen>
