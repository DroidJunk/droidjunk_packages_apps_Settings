<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="Show or Hide Toggles"
>

	<SwitchPreference 
		android:key="toggles_show_torch"
		android:summaryOn="Torch Toggle is on"
		android:summaryOff="Torch Toggle is off"
		android:title="Torch Toggle" 
		android:defaultValue="true"	/>    
    
