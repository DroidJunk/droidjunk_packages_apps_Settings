<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="Quick Colors"
	>
	
    
   	<com.android.settings.ColorPickerPreference
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_color"
		android:title="Color"
		android:summary="This color will be applied to every item that is checked"
		android:defaultValue="#ff3fa2c7" 
		alphaSlider="false" /> 	    


	<Preference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_clear_all"
		android:title="Clear All" 
		/>
   		
   	
   		
    <PreferenceCategory
		android:title="B A T T E R Y   A N D   S I G N A L   I C O N S"
		android:key="quickcolor_icons">

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_icon_color"
		android:title="Signal Icons" 
		android:defaultValue="false"	/>		

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_battery_depleted_color"
		android:title="Battery Depleted" 
		android:defaultValue="false"	/>
				
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_battery_levels_color_one"
		android:title="Battery Level One" 
		android:defaultValue="false"	/>		
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_battery_levels_color_two"
		android:title="Battery Level Two" 
		android:defaultValue="false"	/>			
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_battery_levels_color_three"
		android:title="Battery Level Three" 
		android:defaultValue="false"	/>	
		
					
    </PreferenceCategory>

    
    
    <PreferenceCategory
		android:title="N A V I G A T I O N   B A R"
		android:key="quickcolor_navbar">
   				
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_nav_button_color"
		android:title="Navigation Button" 
		android:defaultValue="false"	/>			
				 
    </PreferenceCategory>
  

    
    
	<PreferenceCategory
		android:title="C L O C K"
		android:key="quickcolor_clock">
	
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_clock_color"
		android:title="Clock" 
		android:defaultValue="false"	/>	   		
   		
    </PreferenceCategory>

    
	
        
    <PreferenceCategory
		android:title="S T A T U S B A R   P U L L D O W N"
		android:key="quickcolor_pulldown">
   				
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_date_color"
		android:title="Date" 
		android:defaultValue="false"	/>			
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_clear_button_color"
		android:title="Clear All Button" 
		android:defaultValue="false"	/>	        
        
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_close_bar_color"
		android:title="Pulldown Handle" 
		android:defaultValue="false"	/>			
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_carrier_color"
		android:title="Carrier" 
		android:defaultValue="false"	/>			
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_battery_label_color"
		android:title="Battery Level" 
		android:defaultValue="false"	/>			
					
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_temp_label_color"
		android:title="Battery Temperature" 
		android:defaultValue="false"	/>	

		 
    </PreferenceCategory>    
        
    
    
    <PreferenceCategory
		android:title="T O G G L E S"
		android:key="quickcolor_toggles">

	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_color"
		android:title="Toggle Background" 
		android:defaultValue="false"	/>			
				
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_icon_on_color"
		android:title="Icon On" 
		android:defaultValue="false"	/>				
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_icon_inter_color"
		android:title="Icon Intermediate" 
		android:defaultValue="false"	/>				
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_icon_off_color"
		android:title="Icon Off" 
		android:defaultValue="false"	/>				
				
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_ind_on_color"
		android:title="Indicator On" 
		android:defaultValue="false"	/>				
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_ind_off_color"
		android:title="Indicator Off" 
		android:defaultValue="false"	/>		
					
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_text_on_color"
		android:title="Text On" 
		android:defaultValue="false"	/>		
		
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_text_off_color"
		android:title="Text Off" 
		android:defaultValue="false"	/>			
				
	<CheckBoxPreference 
		android:layout="?android:attr/preferenceLayoutChild" 
		android:key="qk_toggle_divider_color"
		android:title="Divider" 
		android:defaultValue="false"	/>				
		
    </PreferenceCategory>         				
 
        
</PreferenceScreen>

