<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="top">
	
	<TextView android:id="@+id/textView1"
    android:layout_marginTop="30dip"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content" 	
    android:textSize="25sp" 
	android:text="@string/rom_title_version"
	android:layout_centerHorizontal="true"/>
	
	<TextView android:id="@+id/textView2"
	android:layout_below="@+id/textView1"
    android:layout_marginTop="50dip" 	
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	android:text="@string/rom_about_description" 
    android:textSize="18sp"
	android:layout_centerHorizontal="true"/>

	<View android:id="@+id/divider"        
	android:layout_width="fill_parent"
	android:layout_height="2dip"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="20dip"
	android:layout_marginRight="20dip"
	android:layout_below="@id/textView2"        
	android:background="@android:drawable/divider_horizontal_dark"/>
	
	<TextView android:id="@+id/textView3"
	android:layout_below="@+id/divider"
    android:layout_marginTop="40dip" 	
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	android:text="@string/rom_about_location"
    android:textSize="20sp"
	android:layout_centerHorizontal="true" />
		

				
</RelativeLayout>
